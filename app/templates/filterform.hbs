<div  class="modal modal-transparent fade" id="filterform" tabindex="-1" role="dialog"
aria-label="Filter restaurants" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="text-center  modal-title">Filter restaurants</h4>
      </div>
      <div class="modal-content">
        <div class="form-group">
          <label for="rating">Filter by rating:</label>
          <br/>
          <fieldset onchange={{action 'updateRating' value='target.value' }}  id="rating" name="rating" class="rating">
              {{input type="radio" value=5 class="form-control" name="rating" id="star_5"}} <label  for="star_5" title="Rocks!">5 stars</label>
              {{input type="radio" value=4 class="form-control" name="rating" id="star_4"}} <label for="star_4" title="Pretty good">4 stars</label>
              {{input type="radio" value=3 class="form-control" name="rating" id="star_3"}} <label  for="star_3" title="Meh">3 stars</label>
              {{input type="radio" value=2 class="form-control" name="rating" id="star_2"}} <label for="star_2" title="Kinda bad">2 stars</label>
              {{input type="radio" value=1 class="form-control" name="rating" id="star_1"}} <label for="star_1" title="Poor">1 star</label>
           </fieldset>
            <br/>
            <br/>
            <label for="cuisine">Filter by cuisine</label>
            <select  class="form-control" onchange={{action 'updateCuisine' value='target.value' }} id="cuisine" name="cuisine">
                <option value="All">All</option>
                <option value="Pizza">Pizza</option>
                <option value="Burrito">Burrito</option>
                <option value="Chicken">Chicken</option>
            </select>
        </div>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" {{action 'filter'}} class="btn btn-default" data-dismiss="modal">Filter</button>
      </div>
    </div>
  </div>
</div>
